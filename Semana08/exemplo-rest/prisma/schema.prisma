generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  name  String?
  password  String

  avatarUrl String?

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}